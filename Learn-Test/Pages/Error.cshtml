@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Oeps!</h1>
<h2 class="text-danger">Het lijkt er op dat er een foutje opgetreden is tijdens het behandelen van jouw aanvraag.</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Aanvraag ID:</strong> <code>@Model.RequestId</code>
    </p>
}

<h3>Probeer te herladen</h3>
<p>
    Als het probleem blijft opdagen, <a href="mailto:ewan@tebreca.com">neem dan contact met de systeemadminisrator op</a>
</p>